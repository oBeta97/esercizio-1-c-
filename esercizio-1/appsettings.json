{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Warning",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ],
    "Properties": {
      "Application": "Esercizio1"
    }
  },
  "CacheOptions": {
    "SizeLimit": 1000
  },
  "CacheProfiles": {
    "Default": {
      "Duration": 10,
      "Location": "Any",
      "NoStore": false
    },
    "NoCache": {
      "NoStore": true,
      "Location": "None"
    }
  },
  "Authors": {
    "PerPage": 10,
    "Order": {
      "By": "Name",
      "Ascending": false,
      "Allow": [
        "Name",
        "Country",
        "Id"
      ]
    }
  }
}